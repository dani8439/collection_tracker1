<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Welcome <%= @user.username %></h1>

<h2>Here is your collection: </h2>

<% @pieces = current_user.pieces %>
<% @pieces.each do |piece| %>
<ul>
  <li><a href="/pieces/<%= piece.id %>"><%= piece.size %> <%= piece.name %></li>
</ul>
<% end %>


