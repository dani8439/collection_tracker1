<h2><%= @wishlist.quantity %> - <%= @wishlist.pattern_name%> <%= @wishlist.piece_size%> <%= @wishlist.piece_name %>(s)</h2>

<br></br>
<a href="/wishlists/<%= @wishlist.id %>/edit">Edit Wishlist Item</a>
<br></br>

<form action="/wishlists/<%=@wishlist.id%>/delete" method="POST">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" id="submit" value="Delete Item from Wishlist">
</form>

<br></br>
<% if flash.has?(:message) %>
  <div class="message"><%= flash[:message] %> </div>
<% end %>

