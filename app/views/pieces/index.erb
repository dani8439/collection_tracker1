<h1>Hello <%= @user.username%>!</h1>

<h2>Here is your collection</h2>

<% Piece.all.each do |piece| %>
<ul>
  <li><a href="/pieces/<%= piece.id %>"><%= piece.size %> <%= piece.name %></li><br>
    <% piece.patterns.each do |pattern| %>
    <ul>
      <li><%= pattern.name %>(<%= pattern.quantity%>)</li>
    </ul>
    <% end %>
</ul>
<% end %>

<% Pattern.all.each do |pattern| %>
  <ul>
    <li><a href="/patterns/<%= pattern.id %>"><%= pattern.name %></li>
  </ul>
<% end %>
<br></br>

